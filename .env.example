# Docker Environment Variables for CGA Application
# Copy this file to .env before running docker-compose

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cga_db
DB_USER=postgres
DB_PASSWORD=change-this-password-in-production

# Backend Configuration
BACKEND_PORT=5000
NODE_ENV=production

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=change-this-jwt-secret-to-random-string-min-32-chars
JWT_REFRESH_SECRET=change-this-refresh-secret-to-random-string-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Secret
SESSION_SECRET=change-this-session-secret-to-random-string-min-32-chars

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=http://localhost

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cga.local

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_SIZE=10485760
LOG_MAX_FILES=10
